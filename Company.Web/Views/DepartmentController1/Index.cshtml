@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() > 0){
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Detailes</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <td>
                        <a asp-action="Detailes" asp-route-id="department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Detailes
                        </a>
                    </td>
                    <td>
                        <a asp-action="Detailes" asp-route-id="department.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Detailes" asp-route-id="department.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-5 alert alert-warning">
        <h3>There is no departments</h3>
    </div>
}

