@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<form asp-action="SignUp" method="post" class="login100-form validate-form">
	<div asp-validation-summary="All"></div>
	<span class="login100-form-title p-b-49">
		SignUp
	</span>

	<div class="wrap-input100 validate-input m-b-23" data-validate="FirstName is reauired">
		<span class="label-input100">FirstName</span>
		<input asp-for ="FirstName" class="input100" type="text" placeholder="Type your First Name">
		<span asp-validation-for="FirstName" class="focus-input100" data-symbol="&#xf206;"></span>
	</div>

	<div class="wrap-input100 validate-input" data-validate="LastName is required">
		<span class="label-input100">LastName</span>
		<input asp-for="LastName" class="input100" type="text" placeholder="Type your Last Name">
		<span asp-validation-for="LastName" class="focus-input100" data-symbol="&#xf190;"></span>
	</div>

	<div class="wrap-input100 validate-input" data-validate="Email is required">
		<span class="label-input100">Email</span>
		<input asp-for="Email" class="input100" type="email" placeholder="Type your Email">
		<span asp-validation-for="Email" class="focus-input100" data-symbol="&#xf190;"></span>
	</div>

	<div class="wrap-input100 validate-input" data-validate="Password is required">
		<span class="label-input100">Password</span>
		<input asp-for="Password" class="input100" type="password" placeholder="Type your password">
		<span asp-validation-for="Password" class="focus-input100" data-symbol="&#xf190;"></span>
	</div>

	<div class="wrap-input100 validate-input" data-validate="Confirm Password is required">
		<span class="label-input100">ConfirmPassword</span>
		<input asp-for="ConfirmPassword" class="input100" type="password" placeholder="Confirm your password">
		<span asp-validation-for="ConfirmPassword" class="focus-input100" data-symbol="&#xf190;"></span>
	</div>

	<label class="my-5">
		<input type="checkbox" required />
		<span>I Agree To Terms</span>
	</label>

	<div class="container-login100-form-btn">
		<div class="wrap-login100-form-btn">
			<div class="login100-form-bgbtn"></div>
			<button class="login100-form-btn">
				SignUp
			</button>
		</div>
	</div>
</form>
<p class="my-4">Do You Have An Account?<a asp-action="Login">Login Now!</a></p>