@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<form asp-action="ForgetPassword" method="post">
    <div asp-validation-summary="All"></div>

    <span class="login100-form-title p-b-49">
        Forget Password
    </span>

    <div class="wrap-input100 validate-input m-b-23" data-validate="Email is reauired">
        <span class="label-input100">Email</span>
        <input asp-for="Email" class="input100" type="email" placeholder="Type your Email">
        <span asp-validation-for="Email" class="focus-input100" data-symbol="&#xf206;"></span>
    </div>

@*     <input type="submit" value="ResetPassword" /> 
 *@
    <div class="container-login100-form-btn">
        <div class="wrap-login100-form-btn">
            <div class="login100-form-bgbtn"></div>
            <button class="login100-form-btn">
                Reset Password
            </button>
        </div>
    </div>
</form>